[alias]
	a = add -A
	aa = add -A
	dc = diff -F --cached
	co = checkout
	ci = commit
	st = status
	br = branch
	hist  = log -F --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
[user]
  name = Kasif Gilbert
  email = kasif.gilbert@gmail.com
[core]
  editor = /usr/bin/vim
	excludesfile = ~/.gitignore
[merge]
  ff = only
[push]
  default = matching
[color]
  ui = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
